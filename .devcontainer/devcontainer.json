{
    "name": "hw2-frontend",
    "image": "ghcr.io/ds-hw-fuuzen/hw2-frontend:master",
    "customizations": {
        "vscode": {
            "extensions": [
                "octref.vetur",
                "dbaeumer.vscode-eslint",
                "stylelint.vscode-stylelint"
            ]
        }
    },
    "containerEnv": {
        "BK_LOGIN_url": "https://ce.bktencent.com/login/",
        "BK_APP_HOST": "dev.ce.bktencent.com",
        "BK_AJAK_URL_PREFIX": "/",
        "BK_USER_INFO_URL": "/user",
        "BK_BACKEND_API_PREFIX": "http://dev.ce.bktencent.com:8000"
    },
    "forwardPorts": [8080],
    "workspaceFolder": "/app/dev",
    "mounts": [
        "source=${localWorkspaceFolder},target=/app/dev,type=bind",
        "source=/c/Users/YQ/.ssh,target=/root/.ssh,type=bind"
    ],
    "remoteUser": "root",
    "postCreateCommand": "npm install",
    "postStartCommand": "npm run dev"
}